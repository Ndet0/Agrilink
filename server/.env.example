# AgriLink Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================

# SECRET_KEY: Used for session signing and CSRF protection
# CRITICAL: Generate a secure random key for production!
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
# Must be at least 32 characters long
SECRET_KEY=f389a0241b0eece52ee4f8d40bda4354ff081080735b2312c20d5c7ab02f61dc

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost/agrilink

# =============================================================================
# FLASK SERVER CONFIGURATION
# =============================================================================

# Environment: development, production, or testing
FLASK_ENV=development

# Server host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Debug mode (NEVER use true in production!)
FLASK_DEBUG=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed frontend origins (comma-separated)
# CRITICAL: Never use '*' in production - specify exact origins
# Example for production: https://app.agrilink.com,https://admin.agrilink.com
FRONTEND_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Require HTTPS for session cookies (set to 'false' only in development)
SESSION_COOKIE_SECURE=false

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Redis URL for distributed rate limiting (optional)
# For production with multiple servers, use Redis
# Example: redis://localhost:6379/0
# Leave empty to use in-memory storage (single server only)
REDIS_URL=

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================
# 1. Set FLASK_ENV=production
# 2. Generate and set a strong SECRET_KEY
# 3. Set SESSION_COOKIE_SECURE=true
# 4. Configure specific FRONTEND_ORIGINS (no wildcards)
# 5. Use Redis for REDIS_URL if running multiple instances
# 6. Use a production WSGI server (gunicorn, uwsgi)
# 7. Enable HTTPS/TLS at load balancer or reverse proxy
